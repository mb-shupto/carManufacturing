<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="513.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="supto_1930875.ManageShiftsController">
    <children>
        <!-- Title -->
        <Label layoutX="180.0" layoutY="20.0" text="Manage Workforce Shifts">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>

        <!-- Worker selection -->
        <Label layoutX="30.0" layoutY="60.0" text="Select Worker:"/>
        <ComboBox fx:id="workerComboBox" layoutX="150.0" layoutY="60.0" prefWidth="150.0"/>

        <!-- Shift selection -->
        <Label layoutX="30.0" layoutY="100.0" text="Select Shift:"/>
        <ComboBox fx:id="shiftComboBox" layoutX="150.0" layoutY="100.0" prefWidth="150.0"/>

        <!-- Assign Shift button -->
        <Button layoutX="350.0" layoutY="100.0" text="Assign Shift" onAction="#assignShiftOnAction"/>

        <!-- Output Label -->
        <Label fx:id="outputLabel" layoutX="30.0" layoutY="140.0" prefWidth="540.0" wrapText="true"/>

        <!-- Back button -->
        <Button layoutX="510.0" layoutY="450.0" text="Back" onAction="#backOnAction"/>
    </children>
</AnchorPane>