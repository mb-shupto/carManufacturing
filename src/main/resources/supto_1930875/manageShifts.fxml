<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="513.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="supto_1930875.ManageShiftsController">
    <children>
        <!-- Title -->
        <Label layoutX="180.0" layoutY="20.0" text="Manage Workforce Shifts">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <!-- Worker selection -->
        <Label layoutX="107.0" layoutY="158.0" text="Select Worker:" />
        <ComboBox fx:id="workerComboBox" layoutX="227.0" layoutY="158.0" prefHeight="26.0" prefWidth="253.0" promptText="Choose worker team" />

        <!-- Shift selection -->
        <Label layoutX="107.0" layoutY="198.0" text="Select Shift:" />
        <ComboBox fx:id="shiftComboBox" layoutX="227.0" layoutY="198.0" prefHeight="26.0" prefWidth="254.0" promptText="Choose a shift" />

        <!-- Assign Shift button -->
        <Button layoutX="162.0" layoutY="268.0" onAction="#assignShiftOnAction" text="Assign Shift" />

        <!-- Output Label -->
        <Label fx:id="outputLabel" layoutX="262.0" layoutY="66.0" prefHeight="64.0" prefWidth="317.0" wrapText="true" />

        <!-- Back button -->
        <Button layoutX="510.0" layoutY="450.0" onAction="#backOnAction" text="Back" />
    </children>
</AnchorPane>
